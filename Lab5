#include <stdio.h>
#include <stdlib.h>

double* calculateMatrixOperation(double* matrix1, double* matrix2, int n, char operation) {
    double* result = malloc(n * n * sizeof(double));

    for (int i = 0; i < n * n; i++) {
        if (operation == '+') {
            result[i] = matrix1[i] + matrix2[i];
        } else if (operation == '-') {
            result[i] = matrix1[i] - matrix2[i];
        } else if (operation == '*') {
            result[i] = matrix1[i] * matrix2[i];
        }
    }

    return result;
}

int main() {
    int n;
    printf("Введите размерность матриц: ");
    scanf("%d", &n);

    double* matrix1 = malloc(n * n * sizeof(double));
    double* matrix2 = malloc(n * n * sizeof(double));

    printf("Введите элементы первой матрицы:\n");
    for (int i = 0; i < n * n; i++) {
        scanf("%lf", &matrix1[i]);
    }

    printf("Введите элементы второй матрицы:\n");
    for (int i = 0; i < n * n; i++) {
        scanf("%lf", &matrix2[i]);
    }

    char operation;
    printf("Введите знак операции (+, -, *): ");
    scanf(" %c", &operation);

    double* result = calculateMatrixOperation(matrix1, matrix2, n, operation);
    printf("Результат операции:\n");
    for (int i = 0; i < n * n; i++) {
        printf("%.2f ", result[i]);
        if ((i + 1) % n == 0) {
            printf("\n");
        }
    }

    free(matrix1);
    free(matrix2);
    free(result);

    return 0;
}
